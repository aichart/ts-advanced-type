{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es5",
      "ES2015.Collection",
      "ES2015.Iterable",
      "dom",
      "dom.iterable"
    ],
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "outDir": "./output",
    "rootDirs": ["src"],
    "removeComments": true,
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "output",
    "node_modules"
  ],
  "include": [
    "src"
  ]
}